<launch>
  <include file="$(find pec)/launch/asus_frames.launch"/>
  <include file="$(find openni2_launch)/launch/openni2.launch">
    <arg name="camera" value="camera"/>
    <arg name="publish_tf" value="false"/>
    <arg name="depth_registration" value="true" />    
    <arg name="depth_camera_info_url" value="package://pec/cfg/camera_info/rgb_PS1080_PrimeSense.yaml" />
  </include>
  <param name="/camera/driver/z_scaling" value="1.1" /> 
  
  <node pkg="tf" type="static_transform_publisher" name="rgbd_b" args="-0.015 0.260 0.98 1.571 -0.45 0.000 /base_link /camera_link 100"/>
</launch>

